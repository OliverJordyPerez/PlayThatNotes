<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <View
        android:id="@+id/forthSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#0000BCD4"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/forthLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifthLine" />

    <View
        android:id="@+id/firstUpperSpace"
        android:layout_width="409dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:background="#0000BCD4"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/fifthLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstUpperExtraLine" />

    <View
        android:id="@+id/firstLowerSpace"
        android:layout_width="409dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:background="#0000BCD4"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/firstLowerExtraLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstLine" />

    <View
        android:id="@+id/secondUpperSpace"
        android:layout_width="409dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:background="#0000BCD4"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/firstUpperExtraLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/thirdSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#00FF9800"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/thirdLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forthLine" />

    <View
        android:id="@+id/secondSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#004FFF3B"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/secondLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdLine" />

    <View
        android:id="@+id/fifthLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstUpperExtraLine" />

    <View
        android:id="@+id/forthLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifthLine" />

    <View
        android:id="@+id/thirdLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forthLine" />

    <View
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdLine" />

    <View
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondLine" />

    <View
        android:id="@+id/firstSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#00FFEB3B"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/firstLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondLine" />

    <View
        android:id="@+id/firstLowerExtraLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/noteImg"
        app:layout_constraintStart_toStartOf="@+id/noteImg"
        app:layout_constraintTop_toBottomOf="@+id/firstLine" />

    <View
        android:id="@+id/firstUpperExtraLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/noteImg"
        app:layout_constraintStart_toStartOf="@+id/noteImg"
        app:layout_constraintTop_toBottomOf="@+id/secondUpperSpace" />

    <ImageView
        android:id="@+id/noteImg"
        android:layout_width="44dp"
        android:layout_height="36dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="56dp"
        android:background="#00FFFFFF"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="@+id/secondLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pngfind_com_mozart_png_4694953" />

    <LinearLayout
        android:id="@+id/TopButtons"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"
            android:text="C" />

        <Button
            android:id="@+id/dButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"
            android:text="D" />

        <Button
            android:id="@+id/eButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"
            android:text="E" />

        <Button
            android:id="@+id/fButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"
            android:text="F" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TopButtons"
        app:layout_constraintStart_toStartOf="@+id/TopButtons">

        <Button
            android:id="@+id/gButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"
            android:text="G" />

        <Button
            android:id="@+id/aButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"
            android:text="A" />

        <Button
            android:id="@+id/bButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"
            android:text="B" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="298dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/g_cleff" />

    <TextView
        android:id="@+id/timeLeftLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Time left: 60s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/correctScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Correct: 15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wrongScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Wrong: 3"
        app:layout_constraintStart_toStartOf="@+id/correctScore"
        app:layout_constraintTop_toBottomOf="@+id/correctScore" />

    <Button
        android:id="@+id/mainStartButton"
        android:layout_width="144dp"
        android:layout_height="66dp"
        android:backgroundTint="#8BC34A"
        android:text="Start"
        android:textColor="#FFFFFF"
        android:textColorHint="#8BC34A"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/TopButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstLowerSpace" />

</androidx.constraintlayout.widget.ConstraintLayout>